      <div class="form-container sign-up-container">
        <form action="/signup" class="signupform" method="POST">
          <h1 class="createaccount">Create Account</h1>
          <div class="requiredinput">
            <input id="disablenamefield" type="text" name="name" placeholder="Name" autocomplete="off" required/>
          <input type="email" class="email" id="email" name="username" placeholder="Email" required/>
          <input id="disablepassfield" type="password" name="password" placeholder="Password" required  minlength="6"/>
          <input id="disablemobfield" type="text" name="mobileNumber" class="input" placeholder="Mobile Number" maxlength="13" minlength="6"/>
          <input id="disablecollfield" type="text" name="college" class="input" placeholder="College "/>
          <select style="margin-top: 1.33vw" name="country" class="countries input" id="countrylist">
            <option value="" selected>Select Country</option>
          </select>
          <select  style="margin-top: 1.33vw" name="state" class="states input" id="statelist" disabled>
            <option value="" selected>Select State</option>
          </select>
          <select style="margin-top: 1.33vw" name="city" class="cities input" id="citylist" disabled>
            <option value="" selected>Select City</option>
          </select>
          <select id="genderlist" style="margin-top: 1.33vw" name="gender" class="input" placeholder="Select your Gender">
            <option value="none" selected>Gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">other</option>
          </select>
          <input id="disableyear" type="text" name="yearOfStudy" class="input" placeholder="Specify your Years of Study"/>
          <div id="disableintern" class="reference">Referenced by Megalith Intern ?</div>
          <div id="disablebutton" class="buttonmipid" style="margin-left: 8vw;">
            <label class="labelyes" style="display: flex"><input style="margin-right: 0.5vw" type="radio" name="havemipid" onclick="activemipidc();"/><div class="radiobutton">Yes</div></label>
            <label style="display: flex"><input style="margin-right: 0.5vw" type="radio" name="havemipid" value="No" onclick="deactivemipidc();"/><div class="radiobutton">No</div></label></div>
          <input style="display: none" type="text" id="mipid" name="mipid" placeholder="MIP Id"/>
          </div>
          <input type="text" id="enterotp" name="otpentered" class="input " placeholder="Enter OTP"/>
          <button style="border-radius: 3vw" type="button" id="getotp" onclick="generateotp()">Get OTP</button>
          <button style="border-radius: 3vw" type="submit" id="signupbutton">Sign Up</button>
        </form>
      </div>
      <div class="form-container sign-in-container">
        <form action="/login" class="signinform" method="POST">
          <h1 class="signinoption">Sign In</h1>
          <span>or use your account</span>
          <input type="text" name="username" placeholder="Email" />
          <input type="password" name="password" placeholder="Password" />
          <button style="border-radius: 3vw; font-size: 1.5rem" type="submit">Sign In</button>
          <a class="forgotpassword" href="/forgot-password">Forgot Password</a>
        </form>
